        <style>
			@import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,300;0,400;0,500;1,400&display=swap');
			*{
				padding: 0;
				box-sizing: border-box;
				font-family: 'Poppins';
			}
			
            table {
                border-collapse: collapse;
                width: 100%;
            }
			/* main{
				display: flex;
				flex-direction: column;
				justify-content: center;
				align-items: center;
			} */
			header a{
				padding: 24px;
				padding-top: 2px;
			}
			h1,h2{
				text-align: center;
				text-decoration: underline;
				font-size: 2rem;
				color: #333;
			}
			.table1, .table2{
				margin: 2px;
				padding: 24px;	
			}
			.table{
				width: 100%;
				border-collapse: collapse;
			}
			.table th, .table td{
				padding: 12px 5px;
				border: 1px solid #ddd;
				text-align: center;
				/* font-size: 18px; */
			}
			.table td{
				font-size: 12px;
			}
			.table th{
				background-color: #333;
				color: #ffffff;
				font-size: 16px;
				font-weight: 200;
			}
			.table tbody tr:nth-child(even){
				background-color: #f5f5f5;
			}

			@media (max-width: 830px) {
			.table thead{
				display: none;
			}
			.table, .table tbody, .table tr, .table td{
				display: block;
				width: 100%;
			}
			.table tr{
				margin-bottom: 15px;
			}
			.table td{
				text-align: left;
				position: relative;
			}
			.table td::before{
				content: attr(data-label);
				width: 100%;
				text-align: left;
				font-weight: bold;
			}
			.input-box i{
				display: none;
			}
			}
			@media (max-width: 500px) {
			.table td{
				font-size: 11px;
			}
			.input-box i{
				display: none;
			}
			}
            /* td,
            th {
                border: 1px solid #dddddd;
                text-align: left;
                padding: 8px;
            }
    
            tr:nth-child(even) {
                background-color: #dddddd;
            } */
			.button{
			display: flex;
			justify-content: center;
			align-items: center;
			margin: 0 20px;
			margin-top: 20px;
			}
			.button button{
				height: 40px;
				width: 90px;
				margin: 0 4px;
				outline: none;
				border: 2px #aaa solid;
				border-radius: 10px;
				background-color: transparent;
				font-weight: 700;
				transition: all 0.4s ease;
				font-size: 12px;
				cursor: pointer;
			}
			.button button:hover{
				background-color: rgb(186, 184, 184);
				border: none;
				color: #fff;
			}
			.input-box{
			margin: 9px;
			position: relative;
			}
			.input-box input{
				height: 40px;
				width: 14%;
				outline: none;
				padding: 0 15px;
				border: none;
				border: 1px solid #aaa;
				border-radius: 5px;
				color: #333;
				font-size: 14px;
				font-weight: 400;
			}
			.input-box i{
				position: absolute;
				top: 20%;
				left: 12%;
				color: #334;
			}
        </style>
		<script>
			$(document).ready(function () {   
   
				$('#myInput').datetimepicker({
					format: 'DD-MM-YYYY',
				});
	
				$('#myInput').on('dp.change', function (e) {
					var rex = new RegExp($(this).val(), "i");
					$("#myTable tr").hide();
					$("#myTable tr").filter(function () {
						return rex.test($(this).text());
					}).show();
				$(".noResults").hide();
					if ($("#myTable tr:visible").length == 0) {
						$(".noResults").show();
					}
				});  
			});
			function printSection(el){
				var getFullContent = document.body.innerHTML;
				var printsection = document.getElementById(el).innerHTML;
				document.body.innerHTML = printsection;
				window.print();
				document.body.innerHTML = getFullContent;
			}
		</script>
	</head>
	<body>
		<header>
			<a href="/Admin">Home</a>
		</header>
		
			<h1>Tabernacle of Psalms</h1>
		
		<div class='col-sm-6'>
			<div class="form-group" style="position:relative">
				<div class='input-group date' id='datetimepicker1'>
						<div class="input-box">
							<input id="myInput" type="text" name="myInputSearches" class="form-control" placeholder="dd-mm-yyyy" >
							<i class="bi bi-calendar-check"></i>
						</div>
						<span class="input-group-addon">
								<span class="glyphicon glyphicon-calendar"></span>
						</span>
				</div>
			</div>
		</div><br>
				

		<label class="noResults" style="display:none; color:red"><b><i>No Match Found</i></b></label>
		<main>
		<div class="table1">
			<table id="table" class="table">
				<tr>
					<thead>
						<th>Clocked</th>
						<th>Matric No</th>
						<th>First Name</th>
						<th>Last Name</th>
					</thead>
				</tr>
				<% att.forEach(element => {%> 
					<tbody id="myTable">
						<% if (element.clocked != "0") { %>
							<tr>
								<td data-label="Clocked">
									<%= element.clocked %>
								</td>
								<td data-label="MatricNo">
									<%= element.matricno %>
								</td>
								<td data-label="Firstname">
									<%= element.firstname %>
								</td>
								<td data-label="Lastname">
									<%= element.lastname %>
								</td>
							</tr>
						<% } %>
					</tbody>
				<% }) %>
			</table>
		</div>
		<div class="button">
			<button onclick="printSection('table')">Print</button>
		</div>
		</main>
	</body>
</html>
