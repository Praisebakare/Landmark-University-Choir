        <style>
        *{
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-style: 'Poppins';
            /* overflow: hidden; */
        }
        body{
            min-height: 100vh;
            /* display: flex; */
            align-items: center;
            justify-content: center;
            background-color: rgba(255, 255, 255, .15);  
            backdrop-filter: blur(5px);
            background-image: url(/static/images/1.jpg);
            background-size: cover;
            background-position: center;
        }
        .logo img{
            width: 180px;
        }
        .logo{
            margin-right: auto; 
            margin-left: 40px;
            margin-top: -20px;
        }
        .header{
            display: flex;
            justify-content: flex-end;
            flex-direction: row;
            margin: 41px 12px;
            max-width: 100vw;
        }
        
        
        .menu-down{
            display: flex;
            flex-direction: column;
            margin-right: 24px;
            opacity: 0;
            z-index: 1;   
            transition: .6s all;
        }
        .join:hover .menu-down{
            opacity: 1;
        }
        .join:hover .menu{
            display: none;
        }
        .menu-down button{
            align-items: center;
            justify-content: center;
            padding: 12px 32px;
            outline: none;
            border: none;
            background: none;
            border-radius: 5px;
            display: flex;
            flex-direction: column;
            transition: 0.6s all;
        }
        .menu-down button:hover{
            background-color: rgb(255, 228, 196);
        }
        .menu-down button a{
            text-decoration: none;
            text-align: center;
            color: #000;
            font-weight: 700;
        }
        .menu{
            text-align: center;
            position: absolute;
            top: 10%;
            right: 6%;
        }
        .menu  i{
            font-size: 30px;
        }
        .main{
            display: flex;
            flex-wrap: wrap;
            gap: 0;
            width: 50%;
        }
        .welcome{
            background-color: #fff;
            max-width: 500px;
            width: 100%;
            /* display: flex; */
            justify-content: center;
            align-items: center;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 3px 6px rgba(0,0,0,0.35);
        }
        .welcome .welcome-text h1{
            font-size: 30px;
            font-weight: 600;
            text-align: center;
            color: #334;
        }
        .welcome{
            text-align: center;
            margin: auto;
        }
        .login-details{
            line-height: 22px;
        }
        .log{
            margin-bottom: 5px  ;
        }
        .login-details p{
            font-size: 16px;
        }
        .welcome a{
            text-decoration: none;
            color: #334;
        }
        @media (max-width: 1080px) {
        .main{
            flex-direction: column;
        }
        }
        @media (max-width: 750px) {
            .welcome{
                max-width: 350px;
            }
            .welcome .welcome-text h1{
                font-size: 16px;
            }
            .login-details p{
                font-size: 12px;
            }
        }
        @media (max-width: 400px) {
            .welcome{
                max-width: 200px;   
            }

        }
        @media (max-width: 375px) {
            .pic2 img{
                width: 80px;
            }
            .logo img{
                width: 150px;
            }
            .menu{
                right: 30px;
            }
        }
        </style>
