<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tabarnacle of Psalms</title>
    <link rel="apple-touch-icon" sizes="180x180" href="/static/favicon_io/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/static/favicon_io/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/static/favicon_io/favicon-16x16.png">
    <link rel="manifest" href="/static/favicon_io/site.webmanifest">
    <link rel="stylesheet" href="/static/announcements.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">

</head>
<body>
    <input type="checkbox" id="nav-toggle">
    <div class="sidebar">
        <div class="sidebar-brand">
            <label class="menu" for="nav-toggle">
                <i class="bi bi-list" id="btn"></i>
            </label>
            <a href="/Member">
                <span class="logo-content">LMU.CHOIR</span>
            </a>
        </div>
        <div class="sidebar-menu">
            <ul>
                <li>
                    <a href="/Member">
                        <i class="bi bi-columns-gap"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
                <li>
                    <a href="/Choir/leaders" >
                        <i class="bi bi-briefcase"></i>
                        <span>Team Leaders</span>
                    </a>
                </li>
                <li>
                    <a href="/Choir/Announcement" >
                        <i class="bi bi-megaphone"></i>
                        <span>Announcements</span>
                    </a>
                </li>
                <li>
                    <a href="/Member/Attendance">
                        <i class="bi bi-fingerprint"></i>
                        <span>Attendance</span>
                    </a>
                </li>
                <li>
                    <a href="/Member/changepassword" >
                        <i class="bi bi-person-lock"></i>
                        <span>Change Password</span>
                    </a>
                </li>
                <li>
                    <a href="/Member/Updateinfo">
                        <i class="bi bi-three-dots"></i>
                        <span>Update Information</span>
                    </a>
                </li>
                <li>
                    <a href="/Member/au/logout" >
                        <i class="bi bi-box-arrow-left"></i>
                        <span>Logout</span>
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <div class="main-content">
        <header>
            <h1>Dashboard</h1>
            
            <!-- <div class="search-wrapper">
                <i class="bi bi-search"></i>
                <input type="search" placeholder="Search anything">
            </div> -->
            <div class="user-wrapper">
                <div class="img">
                    <i class="bi bi-person-circle"></i>
                </div>
                <div>
                    <h5><%= user %> </h5>
                    <small><%= userpart %></small><br>
                    <small><%= level %> Level</small>
                </div>
            </div>
        </header>
        <main>
            <div class="main-inside">
                <div class="inside-annouce">
                    <% announcement.forEach(element => { %>
                        <div class="annoucement">
                            <h4><%= element.type %> </h4>
                            <p><%= element.announcement %> </p>
                            <p><%= element.date %> </p>
                        </div>
                    <% }) %>
                    <% dresscode.forEach(element => { %>
                        <div class="dress-code">
                            <h4><%= element.type %> </h4>
                            <p><%= element.announcement %> </p>
                            <p><%= element.date %> </p>
                        </div>
                    <% }) %>
                    <% sunday.forEach(element => { %>
                        <div class="song">
                            <h4><%= element.type %> </h4>
                            <p><%= element.announcement %></p>
                            <p><%= element.date %></p>
                        </div>
                    <% }) %>
                    <% tuesday.forEach(element => { %>
                        <div class="song">
                            <h4><%= element.type %> </h4>
                            <p><%= element.announcement %> </p>
                            <p><%= element.date %> </p>
                        </div>
                    <% }) %>
                    <% thursday.forEach(element => { %>
                        <div class="song">
                            <h4><%= element.type %> </h4>
                            <p><%= element.announcement %> </p>
                            <p><%= element.date %> </p>
                        </div>
                    <% }) %>
                </div>
                <div class="inside-chat">
                    <h4>Suggestion</h4>
                    <span class="msg">
                        <% if(locals.message){ %>
                            <div>
                                <b><%= message %></b>
                            </div>
                        <% } %>
                    </span>
                    <div class="forms">
                        <form action="/Formsubmit" method="post">
                            <div class="user-details">
                               <!--  <div class="input-box">
                                    <label for="#">Full Name</label>
                                    <input type="text" placeholder="Fullname...">
                                </div> -->
                                <div class="input-box">
                                    <label for="#">RegNo </label>
                                    <input name="regno" type="number" placeholder="2000***">
                                </div>
                                <div class="input-box">
                                    <label for="#">Message</label>
                                    <textarea name="message" id="" cols="30" rows="10" placeholder="Talk to us"></textarea>
                                </div>
                                <button class="btn" type="submit">
                                    <span>Submit</span>
                                    <i class="bi bi-arrow-right"></i>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </main>
    </div>
</body>
</html>