    text-align: center;
    line-height: 35px;
    border-radius: 6px;
    transition: 0s;
    opacity: 0;
    pointer-events: none;
    display: block;
  }
  .sidebar.active ul li .tooltip{
    display: none;
  }
  .sidebar ul li:hover .tooltip{
    transition: all 0.4 ease;
    top: 50%;
    opacity: 1;
  }
  .sidebar ul li a{
    color: #f0f0f0;
    text-align: center;
    align-items: center;
    text-decoration: none;
    list-style: none;
